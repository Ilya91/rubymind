<h1 align="center">Welcome to <%= @user.username %>' page</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<p><%= @user.email %></p>
<h4 align="center"><%= @user.username %>'s articles</h4>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= render 'articles/article', obj: @user.articles %>
  </div>
</div>

<hr>
<%= link_to 'Edit', edit_user_path(@user), :class => 'btn btn-warning' %>
<%= link_to 'Delete', user_path(@user), method: :delete, data: {confirm: 'Really???'},
            :class => 'btn btn-danger' %>
<hr>
<%=
debug @user
%>