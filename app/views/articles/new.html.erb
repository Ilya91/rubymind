<h2>Create an article</h2>
<%= form_for :article, url: articles_path do |f| %>
<p>
  Title <br>
  <%= f.text_field(:title, {:class => 'form-control'}) %>
</p>
  <p>
    Text <br>
    <%= f.text_area(:description, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit({:class => 'btn btn-success'}) %>
  </p>
<% end %>